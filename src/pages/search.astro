---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.jsx';

// 獲取所有文章
const allPosts = await getCollection('blog');

// 過濾掉草稿，並準備搜尋用的資料
const searchablePosts = allPosts
  .filter(post => !post.data.draft)
  .map(post => ({
    slug: post.slug || post.id,
    title: post.data.title,
    description: post.data.description,
    excerpt: post.data.excerpt,
    pubDate: post.data.pubDate,
    updatedDate: post.data.updatedDate,
    author: post.data.author || 'Blog 作者',
    tags: post.data.tags || [],
    category: post.data.category || '',
    body: post.body // 包含文章內容以供全文搜尋
  }))
  .sort((a, b) => new Date(b.pubDate).getTime() - new Date(a.pubDate).getTime());
---

<BaseLayout title="搜尋文章" description="搜尋部落格文章">
  <main class="flex-grow">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
      {/* 頁面標題 */}
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          搜尋文章
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          快速找到你需要的技術文章和筆記
        </p>
      </div>

      {/* 搜尋組件 */}
      <Search posts={searchablePosts} client:load />

      {/* 快速連結 */}
      <div class="mt-16 border-t border-gray-200 dark:border-gray-700 pt-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
          快速導航
        </h2>
        <div class="grid md:grid-cols-3 gap-4 max-w-3xl mx-auto">
          <a 
            href="/blog/1" 
            class="flex items-center justify-center px-4 py-3 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            所有文章
          </a>
          <a 
            href="/" 
            class="flex items-center justify-center px-4 py-3 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            回首頁
          </a>
          <a 
            href="/about" 
            class="flex items-center justify-center px-4 py-3 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            關於我
          </a>
        </div>
      </div>

      {/* 熱門標籤 */}
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
          熱門標籤
        </h2>
        <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
          {
            // 統計所有標籤出現次數
            [...new Set(searchablePosts.flatMap(post => post.tags))]
              .map(tag => ({
                name: tag,
                count: searchablePosts.filter(post => post.tags.includes(tag)).length
              }))
              .sort((a, b) => b.count - a.count)
              .slice(0, 15) // 顯示前 15 個熱門標籤
              .map(({ name, count }) => (
                <span 
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200"
                >
                  #{name}
                  <span class="ml-2 text-xs bg-blue-200 dark:bg-blue-800 px-1.5 py-0.5 rounded-full">
                    {count}
                  </span>
                </span>
              ))
          }
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-gray-50 dark:bg-gray-800 mt-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center text-gray-600 dark:text-gray-400">
        <p>&copy; {new Date().getFullYear()} Lin's Murmur</p>
      </div>
    </div>
  </footer>
</BaseLayout>